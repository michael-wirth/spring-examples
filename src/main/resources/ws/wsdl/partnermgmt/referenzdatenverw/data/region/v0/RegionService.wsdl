            <soap:operation soapAction="" style="document"/>
            <wsdl:input name="ReadRegionCodeRequest">
                <soap:body use="literal"/>
            </wsdl:input>
            <wsdl:output name="ReadRegionCodeResponse">
                <soap:body use="literal"/>
            </wsdl:output>
            <wsdl:fault name="ApiFault">
                <soap:fault name="ApiFault" use="literal"/>
