        <wsdl:part name="Request" element="pa:readRegionCodeRequest"/>
    </wsdl:message>
    <wsdl:message name="ReadRegionCodeResponseMessage">
        <wsdl:part name="Response" element="pa:readRegionCodeResponse"/>
    </wsdl:message>
    
    <wsdl:message name="ApiFault">
